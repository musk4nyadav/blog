<%= link_to "HomePage", blog_posts_path %> </li>
<br>
<% if user_signed_in?%>
    <%= link_to "All Your Posts", '/users' %>
<%end%>

<div>
  <h1> <%= @blog_post.title %></h1>
<div>

</div>
  <% if user_signed_in?%>
  <% if current_user.id == @blog_post.user_id %>
    <%= link_to "Edit", edit_blog_post_path(@blog_post) %>
  <% end%>

  <% if current_user.id == @blog_post.user_id%>
    <%= link_to "Destroy", blog_post_path(@blog_post), data: {
                      turbo_method: :delete,
                      turbo_confirm: "Are you sure?"
                    } %>
  <% end%>

  <% if current_user.id == @blog_post.user_id%>
    <%= link_to "Archive", "/blog_posts/#{@blog_post.id}/archive"  %>   
  <% end%>  
  <% end%>
</div>


<div> 
  <p> <%= @blog_post.body %></p>
</div>

<div>
  <% if @blog_post.thumbnail?%>
    <%= image_tag @blog_post.thumbnail.url , style: "height:500px; width: 500px;" %>
  <%end%>
</div>

<h2>Comments</h2>
<%= render @blog_post.comments %>

<h2>Add a comment: </h2>
<%= render 'comments/form'%>
