<% if user_signed_in?%>
    <%= link_to "All Your Posts", '/users' %>
<%end%>

<h1> All Blog Posts </h1>
<% @blog_posts.each do |blog_post| %>
    <% if blog_post.delete_flag != true%>
        <div>
        <h2> <%=link_to blog_post.title, "/blog_posts/#{blog_post.id}" %></h2>
        </div>
    <% end %>
<% end%>
