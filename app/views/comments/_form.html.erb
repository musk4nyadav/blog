<%= form_with model: [ @blog_post, @blog_post.comments.build ] do |form| %>

 <% if form.object.errors.any? %>
  <% form.object.errors.full_messages.each do |message| %>
  <div> <%= message%> </div>
  <% end%>
  </div>
  <% end%>

  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>